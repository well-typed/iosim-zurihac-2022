  \end{actionenv}%
  \vskip-\smallskipamount}

\defbeamertemplate*{WT title page}{default}[1][]
{
    \vskip-2em%
    \begin{beamercolorbox}[sep=8pt,wd=\paperwidth,ht=.7\paperheight,#1]{title}
      {\usebeamerfont{title}\inserttitle\par}%
      \ifx\insertsubtitle\@empty%
      \else%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%
      \ifx\inserttitle\@empty%
      \else
        \vskip1em%
        {\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor\par}%
      \fi
      \vskip0.5em%
      {\usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate\usebeamertemplate{copyright notice}\par}
      \vskip1em%
    \end{beamercolorbox}%
    \vskip3em%
    \begin{centering}
    {\leavevmode\usebeamercolor[fg]{titlegraphic}\ifskillsmatter\pgfuseimage{skillsmatterlarge}\fi}
    \hfill
    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
    \end{centering}
  \vfill
}

